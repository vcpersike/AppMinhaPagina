@page "/experience"
@inject ExperienceViewModel ViewModel

<PageTitle>Experiência</PageTitle>

<h1>Minhas Experiências</h1>

<ExperienceList Experiences="@ViewModel.Experiences" />

<div class="navigation-buttons">
    <NavigationButton Label="Voltar para Home" Url="/" />
    <NavigationButton Label="Ver Educação" Url="/education" />
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadExperiencesAsync();
        await InvokeAsync(StateHasChanged);
    }
}
