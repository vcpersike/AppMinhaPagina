@page "/education"
@inject EducationViewModel ViewModel

<PageTitle>Educação</PageTitle>

<h1>Minha Formação</h1>

<div class="education-container">
    <EducationList EducationItems="@ViewModel.EducationList" />
</div>

<div class="navigation-buttons">
    <NavigationButton Label="Voltar para Home" Url="/" />
    <NavigationButton Label="Ver Experiências" Url="/experience" />
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadEducationAsync();
        InvokeAsync(StateHasChanged);
    }
}
