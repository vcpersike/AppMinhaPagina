@page "/"
@using AppMinhaPagina.Shared.Components

<h1>Meu Currículo</h1>

<ProfileCard />

<h2>Experiências</h2>
@if (ExperienceVM.Experiences.Count == 0)
{
    <p>Carregando experiências...</p>
}
else
{
    <ExperienceCard Experiences="ExperienceVM.Experiences.ToList()" />
}

<h2>Educação</h2>
@if (EducationVM.Educations.Count == 0)
{
    <p>Carregando educação...</p>
}
else
{
    <EducationCard Educations="EducationVM.Educations.ToList()" />
}

<h2>Habilidades</h2>
<SkillList />

<h1>Textos Recebidos do Backend Mock</h1>

@if (TextVM.Texts.Count == 0)
{
    <p>Carregando...</p>
}
else
{ 
    <ul>
        @foreach (var text in TextVM.Texts)
        {
            <li>
                <h3>@text.Title</h3>
                <p>@text.Body</p>
            </li>
        }
    </ul>
}
