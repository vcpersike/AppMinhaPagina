@if (ExperienceList is not null && ExperienceList.Count > 0)
{
    @foreach (var exp in ExperienceList)
    {
        <div class="experience-card">
            <h3>@exp.Role</h3>
            <h4>@exp.Company (@exp.Period)</h4>
            <p>@exp.Description</p>
        </div>
    }
}
else
{
    <p>⚠️ Nenhuma experiência encontrada.</p>
}

@code {
    [Parameter] public List<ExperienceModel> ExperienceList { get; set; }
}



