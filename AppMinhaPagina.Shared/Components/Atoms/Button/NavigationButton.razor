@inject NavigationManager Navigation

<button class="nav-btn" @onclick="Navigate">
    @Text
</button>

@code {
    [Parameter] public string Text { get; set; } = "Navegar";
    [Parameter] public string Url { get; set; } = "/"; // Valor padrão

    private void Navigate()
    {
        Console.WriteLine($"🔵 Navegando para: {Url}");

        if (!string.IsNullOrEmpty(Url))
        {
            Navigation.NavigateTo(Url, forceLoad: true);
        }
        else
        {
            Console.WriteLine("⚠️ URL vazia!");
        }
    }
}
